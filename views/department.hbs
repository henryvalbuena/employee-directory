
        <div class="row">
            <div class="col-md-12">
                <h2>Department {{dept.departmentId}}</h2>
                <br />
                <form method="post" action="/department/update">
                    <fieldset>
                        <legend>Department Information</legend>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type='text' name='departmentId' value='{{dept.departmentId}}' hidden readonly>
                                    <label for="departmentName">Department Name:</label>
                                    <input class="form-control" id="departmentName" name="departmentName" value="{{dept.departmentName}}" type="text" autocomplete="off" required/>
                                    <div id="in-01" class="feedback" hidden>
                                        Type in a valid department name
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <hr />
                    <a href="/departments" class="btn btn-primary">Cancel</a>
                    <input id="submit-form" type="submit" class="btn btn-success pull-right" value="Update Department" /><br /><br /><br />
                </form>
            </div>
            {{#unless error.ok}}
                <div class="col-md-12">
                    <strong>{{error.msg}}</strong>
                </div>
            {{/unless}}
        </div>
        <script src="/scripts/departmentForm.js"></script>