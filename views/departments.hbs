            <div class="row">
                <div class="col-md-12">
                        <h2>Departments <a href="/departments/add" class="btn btn-success pull-right">Add department</a></h2>
                        
                </div>
                <div class="col-md-12 table-responsive">
                    <hr>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Department&nbsp;Number</th>
                            <th>Department&nbsp;Name</th>
                        </tr>
                        </thead>
                        <tbody>
                            {{#each departments}}
                            <form action="/department/delete/{{departmentId}}" method="get">
                                <tr>
                                    <td>{{departmentId}}</td>
                                    <td><a href="/department/{{departmentId}}">{{departmentName}}</a></td>
                                    <td><input class="delete btn btn-danger" type="submit" value="Delete"></td>
                                </tr>
                            </form>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{#unless error.ok}}
                <div class="col-md-12">
                    <strong>{{error.msg}}</strong>
                </div>
                {{/unless}}
            </div>