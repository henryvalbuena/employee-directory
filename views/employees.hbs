            <div class="row">
                <div class="col-md-12">
                    <h2>Employees <a href="/employees/add" class="btn btn-success pull-right">Add employee</a></h2>
                    <hr>
                </div>
                <div class="col-md-12 table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Employee&nbsp;Num</th>
                                <th>Full&nbsp;Name</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Manager&nbsp;ID</th>
                                <th>Status</th>
                                <th>Department</th>
                                <th>Hired&nbsp;On</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each employees}}
                            <form action="/employee/delete/{{employeeNum}}" method="get">
                                <tr>
                                    <td>{{employeeNum}}</td>
                                    <td><a href="/employee/{{employeeNum}}">{{firstName}}&nbsp;{{lastName}}</a></td>
                                    <td><a href="mailto:{{email}}">{{email}}</a></td>
                                    <td>{{addressStreet}}&nbsp;{{addressCity}}&nbsp;{{addressState}}&nbsp;{{addressPostal}}</td>
                                    <td><a href="/employees?manager={{employeeManagerNum}}">{{employeeManagerNum}}</a></td>
                                    <td><a href="/employees?status={{status}}">{{status}}</a></td>
                                    <td><a href="/department/{{department}}">{{department}}</a></td>
                                    <td>{{hireDate}}</td>
                                    <td><input class="btn btn-danger" type="submit" value="Delete"></td>
                                </tr>
                            </form>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                
                {{#unless error.ok}}
                <div class="col-md-12">
                    <strong>{{error.msg}}</strong>
                </div>
                {{/unless}}
            </div>

            